REM STARFIELD by LAYER8
DIM X(100)
DIM Y(100)
W=20
CLS
WHILE 1
 K=KEYS()
 IF K=1 AND W > 0 THEN W=W-1
 IF K=2 THEN W=W+1
 FOR I=0 TO 99
  PSET X(I), Y(I), 0
  X(I)=X(I)+(X(I)-160)/4+RND()%2
  Y(I)=Y(I)+(Y(I)-120)/4+RND()%2
  IF X(I) > 320 OR X(I) < 0 THEN X(I)=RND()%320
  IF Y(I) > 240 OR Y(I) < 0 THEN Y(I)=RND()%240
  PSET X(I), Y(I), 7
 NEXT
 DELAYMS W
WEND
