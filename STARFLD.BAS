REM STARFIELD by LAYER8
DIM X(100)
DIM Y(100)
W=30000
CLS
WHILE 1
 K=KEYS()
 IF K=1 AND W > 300 THEN W=W-300
 IF K=2 THEN W=W+300
 FOR I=0 TO 99
  PSET X(I), Y(I), 0
  X(I)=X(I)+(X(I)-160)/4+RND()%3
  Y(I)=Y(I)+(Y(I)-120)/4+RND()%3
  IF X(I) > 320 OR X(I) < 0 THEN X(I)=RND()%320
  IF Y(I) > 240 OR Y(I) < 0 THEN Y(I)=RND()%240
  PSET X(I), Y(I), 7
 NEXT
 WHILE CORETIMER()%W>0:WEND
WEND
